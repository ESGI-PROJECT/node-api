{
    "port": 3000,
    "db": {
        "mongo": {
            "url": "mongodb://localhost:27017/grello"
        }
    },
    "security": {
        "salt": "4z3rt7uc$S"
    },
    "acl": {
        "roles": [
            {
                "name": "owner",
                "level": 1
            },
            {
                "name": "admin",
                "level": 2
            },
            {
                "name": "member",
                "level": 3
            }
        ],
        "actions": {
            "projects.create" : {
                "level": 3,
                "belongs": false 
            },
            "projects.list" : {
                "level": 3,
                "belongs": false 
            },
            "projects.get" : {
                "level": 3,
                "belongs": true,
                "entity": "project"
            },
            "projects.update" : {
                "level": 2,
                "belongs": true,
                "entity": "project"
            },
            "projects.remove" : {
                "level": 1,
                "belongs": true,
                "entity": "project" 
            },
            "task.list" : {
                "level": 3,
                "belongs": true 
            },
            "teams.list" : {
                "level": 3,
                "belongs": false 
            },
            "teams.get" : {
                "level": 3,
                "belongs": true,
                "entity": "team" 
            },
            "teams.update" : {
                "level": 1,
                "belongs": true
            },
            "teams.add" : {
                "level": 1,
                "belongs": true 
            },
            "teams.remove" : {
                "level": 1,
                "belongs": true 
            },
            "teams.unsubscribe" : {
                "level": 3,
                "belongs": true 
            } 
        }
    }
}